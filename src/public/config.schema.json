{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dumpsterr Configuration",
  "description": "Configuration schema for dumpsterr application",
  "type": "object",
  "required": ["directories-min-files", "settings"],
  "properties": {
    "directories-min-files": {
      "type": "object",
      "description": "Mapping of file paths to their expected counts",
      "patternProperties": {
        "^.*": {
          "type": "integer",
          "minimum": 0,
          "description": "Expected count of items in this path"
        }
      },
      "additionalProperties": false
    },
    "settings": {
      "type": "object",
      "description": "Application settings",
      "required": ["log_level"],
      "properties": {
        "log_level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
          "description": "Logging level for the application"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}